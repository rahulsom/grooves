<?xml version="1.0" encoding="UTF-8"?>
<server description="OpenLiberty Test Server">
    <!-- Enable features -->
    <featureManager>
        <feature>jaxrs-2.1</feature>
        <feature>cdi-2.0</feature>
        <feature>ejbLite-3.2</feature>
        <feature>jaxb-2.2</feature>
        <feature>mpReactiveStreams-1.0</feature>
    </featureManager>

    <!-- HTTP endpoint -->
    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080" />

    <!-- Web application -->
    <webApplication contextRoot="/grooves-example-javaee"
                    location="grooves-example-javaee.war" />
</server>