{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "matchStrings": [
        "selectNode +v(?<currentValue>.+?)\n"
      ],
      "managerFilePatterns": [
        "/(^|/)(npmw|yarnw|nodew)$/"
      ],
      "datasourceTemplate": "node",
      "depNameTemplate": "node"
    },
    {
      "customType": "regex",
      "matchStrings": [
        "selectTool +npm +(?<currentValue>.+?)\n"
      ],
      "managerFilePatterns": [
        "/(^|/)(npmw|yarnw|nodew)$/"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "npm"
    },
    {
      "customType": "regex",
      "matchStrings": [
        "selectTool +yarn +(?<currentValue>.+?)\n"
      ],
      "managerFilePatterns": [
        "/(^|/)(npmw|yarnw|nodew)$/"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "yarn"
    }
  ]
}
