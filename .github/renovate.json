{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "Waena",
      "groupSlug": "com.github.rahulsom.waena",
      "matchPackageNames": [
        "/com.github.rahulsom.waena.*/"
      ]
    },
    {
      "groupName": "Kotlin",
      "groupSlug": "org.jetbrains.kotlin",
      "matchPackageNames": [
        "/org.jetbrains.kotlin.*/"
      ]
    }
  ]
}
